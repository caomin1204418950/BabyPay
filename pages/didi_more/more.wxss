.page__bd {
    width: 100%;
    height: 250rpx;
    border-top: 2rpx solid #e6e6e6;
    border-bottom: 2rpx solid #f9f9f9;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.page__bd_types {
    width: 246rpx;
    height: 250rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-right: 2rpx solid #f9f9f9;
}

.page__bd_type {
    width: 230rpx;
    height: 130rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.page__bd_type image {
    width: 230rpx;
    height: 130rpx;
}

.page__bd_type_dicripe {
    font-size: 40rpx;
}
